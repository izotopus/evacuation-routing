{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "paths": {
      "@root/*": ["./*"],
      "@controllers/*": ["controllers/*"],
      "@loaders/*": ["loaders/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts" 
  ],
  "exclude": ["node_modules"]
}